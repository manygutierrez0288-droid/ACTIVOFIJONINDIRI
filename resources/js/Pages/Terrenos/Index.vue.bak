                 <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Total de terrenos: <span class="font-bold">{{ terrenos.data?.length || 0 }}</span></p>
                 </div>
                 <Link :href="route('terrenos.create')" class="flex items-center gap-2 text-white bg-indigo-600 hover:bg-indigo-700 font-bold rounded-lg text-xs px-4 py-2 shadow-sm hover:shadow transition-all group">
